<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonMainActivityStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginBottom">13dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8sp</item>
        <item name="iconTint">@color/black</item>
    </style>
    <style name="SettingsActivityStyle">
        <item name="android:textAlignment">textStart</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:background">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/settingsTextColor</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconTint">?attr/settingsIconTint</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>