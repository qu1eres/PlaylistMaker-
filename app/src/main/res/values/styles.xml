<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonMainActivityStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginBottom">13dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8sp</item>
        <item name="iconTint">@color/black</item>
    </style>
    <style name="SettingsActivityStyle">
        <item name="android:textAlignment">textStart</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:background">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">end</item>
        <item name="android:textColor">?attr/settingsTextColor</item>
        <item name="iconTint">?attr/settingsIconTint</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="ButtonSearchUpdate" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textColor">?attr/searchButtonUpdateTextColor</item>
        <item name="backgroundTint">?attr/searchButtonUpdateTint</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TrackName">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/settingsTextColor</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ArtistName">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/settingsTextColor</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TrackDuration">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/settingsTextColor</item>
    </style>

    <style name="ArrowIcon">
        <item name="android:src">@drawable/ic_arrow_forward</item>
        <item name="tint">?attr/settingsIconBackColor</item>
    </style>
    <style name="PlayerToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">?attr/settingsTextColor</item>
        <item name="navigationIconTint">?attr/settingsIconBackColor</item>
    </style>

    <style name="PlayerTrackTitle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/settingsTextColor</item>
    </style>

    <style name="PlayerArtistName">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/settingsTextColor</item>
    </style>

    <style name="PlayerTimeText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/settingsTextColor</item>
    </style>

    <style name="PlayerTrackDescription">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/yp_light_gray_v2</item>
    </style>

    <style name="PlayerTrackValue">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?attr/settingsTextColor</item>
    </style>

    <style name="TabLayout">
        <item name="tabTextColor">?attr/settingsTextColor</item>
        <item name="tabIndicatorColor">?attr/settingsTextColor</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textFontWeight">500</item>
        <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
        <item name="tabBackground">?attr/searchButtonUpdateTextColor</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="Main">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/settingsTextColor</item>
        <item name="android:textSize">22sp</item>
        <item name="tint">?attr/settingsTextColor</item>
    </style>

    <style name="placeHolderButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/searchButtonUpdateTextColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:backgroundTint">?attr/settingsTextColor</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="placeHolderTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">?attr/settingsTextColor</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NavigationButtonStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="itemTextColor">@color/bottom_text_selector</item>
        <item name="itemIconTint">@color/bottom_icon_selector</item>
        <item name="android:textSize">12sp</item>
        <item name="backgroundTint">?attr/settingsBackgroundColor</item>
    </style>
</resources>